{
  "name": "my-electric-app",
  "version": "0.1.0",
  "main": "builder.js",
  "scripts": {
    "backend:start": "cd ./local-stack && source .envrc && make start && cd ..",
    "backend:stop": "cd ./local-stack && make stop && cd ..",
    "db:migrate": "node ./setup_backend/migrate_backend.js",
    "client:generate": "npx electric-sql generate",
    "client:watch": "npx electric-sql generate --watch",
    "build": "node builder.js",
    "build-prod": "NODE_ENV=production pnpm build",
    "start": "SERVE=true pnpm build"
  },
  "engines": {
    "node": ">=16.11.0"
  },
  "dependencies": {
    "@prisma/client": "4.8.1",
    "electric-sql": "next",
    "fs-extra": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wa-sqlite": "rhashimoto/wa-sqlite#master",
    "zod": "<=3.21.1",
    "@databases/pg": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.11",
    "esbuild": "^0.12.26",
    "esbuild-plugin-inline-image": "^0.0.8",
    "prisma": "4.8.1",
    "typescript": "^4.4.3",
    "@electric-sql/prisma-generator": "next"
  }
}
