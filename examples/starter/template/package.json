{
  "name": "my-electric-app",
  "version": "0.1.0",
  "main": "builder.js",
  "scripts": {
    "backend:start": "docker compose --env-file local-stack/.envrc -f local-stack/docker-compose.yaml up",
    "backend:stop": "docker compose -f local-stack/docker-compose.yaml down --volumes",
    "electric:start": "node ./backend/startElectric.js",
    "db:migrate": "node ./backend/migrate.js",
    "client:generate": "npx electric-sql generate",
    "client:watch": "npx electric-sql generate --watch",
    "build": "node copy-wasm-files.js && node builder.js",
    "build-prod": "NODE_ENV=production pnpm build",
    "start": "SERVE=true pnpm build"
  },
  "engines": {
    "node": ">=16.11.0"
  },
  "dependencies": {
    "@databases/pg": "^5.4.1",
    "@prisma/client": "4.8.1",
    "electric-sql": "next",
    "fs-extra": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wa-sqlite": "rhashimoto/wa-sqlite#master",
    "zod": "<=3.21.1"
  },
  "devDependencies": {
    "@electric-sql/prisma-generator": "next",
    "@types/node": "^16.9.1",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.11",
    "esbuild": "^0.12.26",
    "esbuild-plugin-inline-image": "^0.0.8",
    "prisma": "4.8.1",
    "shelljs": "^0.8.5",
    "typescript": "^4.4.3"
  }
}
