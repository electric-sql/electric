{
  "name": "document-editor",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run prepare-wa-sqlite && ng serve",
    "build": "npm run prepare-wa-sqlite && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "backend:start": "node ./backend/startCompose.cjs",
    "backend:stop": "docker compose --env-file backend/compose/.envrc -f backend/compose/docker-compose.yaml stop",
    "backend:up": "node ./backend/startCompose.cjs --detach",
    "backend:down": "docker compose --env-file backend/compose/.envrc -f backend/compose/docker-compose.yaml down --volumes",
    "client:generate": "npm run electric:check && npx electric-sql generate --service http://localhost:5133 --proxy postgresql://prisma:proxy_password@localhost:65432/electric",
    "client:watch": "npm run client:generate --watch",
    "db:migrate": "node ./db/migrate.cjs",
    "db:psql": "node ./db/connect.cjs",
    "db:load-data": "node ./db/load_data.js",
    "db:process-data": "node ./db/process_data.js",
    "db:truncate": "node ./db/truncate.js",
    "db:reload-data": "npm run db:truncate && npm run db:load-data",
    "ports:configure": "node ./change-ports.cjs",
    "electric:start": "node ./backend/startElectric.cjs",
    "electric:check": "node ./check-electric-is-running.cjs",
    "reset": "npm run backend:down && npm run backend:up && sleep 5 && npm run db:migrate && npm run client:generate && npm run db:load-data",
    "prepare-wa-sqlite": "node ./copy-wasm-files.cjs",
    "build-only": "npm run prepare-wa-sqlite && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "check-styleguide": "prettier --check --loglevel warn . && eslint src --quiet",
    "format": "prettier --write --loglevel warn ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@electric-sql/angular": "file:../../clients/angular/dist",
    "electric-sql": "0.7.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "wa-sqlite": "rhashimoto/wa-sqlite#semver:^0.9.8",
    "zod": "^3.22.2",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@databases/pg": "^5.4.1",
    "@databases/pg-migrations": "^5.0.2",
    "@electric-sql/prisma-generator": "^1.1.0",
    "@prisma/client": "4.8.1",
    "@angular-devkit/build-angular": "^17.0.6",
    "@angular/cli": "^17.0.6",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "4.8.1",
    "typescript": "~5.2.2",
    "shelljs": "^0.8.5"
  }
}
