datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator electric {
  provider                 = "./node_modules/prisma-generator-electric/packages/generator/dist/bin.js"
  output                   = "../generated"
  relationModel            = true
  writeNullishInModelTypes = true
}

model items {
  value String @id
  nbr   Int?
}

model User {
  id    Int    @id
  name  String?
  posts Post[]
}

model Post {
  id        Int  @id
  title     String @unique
  contents  String
  nbr       Int?
  authorId  Int
  author    User? @relation(fields: [authorId], references: [id])
}
