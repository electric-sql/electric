[doc Bidirectional replication test pg_1 <-> pg_2]

[global fail_pattern=[Ee][Rr][Rr][Oo][Rr]]
[global psql=electric]

[include shared.luxinc]
[invoke setup]
#--------------------------------------------------

[shell pg_1]
    !insert into entries (content, content_b) values ('1', 'A_VALUE');

[shell pg_2]
    !insert into entries (content, content_b) values ('1', 'B_VALUE');

[shell electric]
    ?+postgres_1 \[debug\] New transaction in publication
    ?+postgres_2 \[debug\] New transaction in publication
    ?Sending transaction
    ?Sending transaction

[shell pg_2]
    [loop iter 1..10]
        @_VALUE
        !select * from entries;
        ?electric=
        [sleep 1]
    [endloop]


#--------------------------------------------------

[cleanup]
    [invoke teardown]
